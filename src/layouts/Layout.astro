---
const base = import.meta.env.BASE_URL;

// Si tu logo está en public/logo.png, esta ruta funciona:
const logo = `${base}logo.png`;
// Si lo tienes en src/assets, usa en su lugar:
// const logo = new URL('../assets/logo.png', import.meta.url).href;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Victor Anuncios</title>
  </head>

  <body class="min-h-screen flex flex-col">
    <!-- HEADER / NAV -->
    <header class="bg-red-600 text-white">
      <div class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
        <a href={`${base}`} class="flex items-center gap-2">
          <img src={logo} alt="Victor Anuncios" class="h-8 w-auto" />
          <span class="font-bold hidden sm:inline">VICTOR ANUNCIOS</span>
        </a>

        <nav class="flex items-center gap-4 text-sm font-semibold">
          <a href={`${base}`}            class="hover:underline">INICIO</a>
          <a href={`${base}productos`}   class="hover:underline">PRODUCTOS</a>
          <a href={`${base}tienda`}      class="hover:underline">TIENDA</a>
          <a href={`${base}servicios`}   class="hover:underline">SERVICIOS</a>
          <a href={`${base}cursos`}      class="hover:underline">CURSOS</a>
          <a href={`${base}contacto`}    class="hover:underline">CONTACTO</a>
        </nav>
      </div>
    </header>

    <!-- CONTENIDO -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- FOOTER (simple) -->
    <footer class="bg-blue-700 text-white">
      <div class="max-w-7xl mx-auto px-4 py-6 text-sm">
        © {new Date().getFullYear()} Victor Anuncios
      </div>
    </footer>
  </body>
</html>
