---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Hero from '../components/hero.astro'
---

<!-- INDEX PRINCIPAL -->
<Layout>

  <!-- ======================= HERO PRINCIPAL ======================= -->
  <Hero
    image="/assets/banners/banner-1.jpg"
    title="Gigantografías en Arequipa"
    subtitle="Letreros 3D, impresión HD en lona, vinil, microperforado y PVC. Instalación profesional y rápida."
    primaryHref="#contacto"
    primaryText="Cotiza ahora"
    secondaryHref="#productos"
    secondaryText="Ver productos"
  />

  <!-- ======================= CINTA DE PROMESA ======================= -->
  <section aria-label="Promesa de servicio" class="bg-black text-white">
    <div class="max-w-7xl mx-auto px-4 py-3 text-center font-semibold tracking-wide">
      Entrega 24 a 72h · Garantía 12 meses · Visita técnica en Arequipa
    </div>
  </section>

  <!-- ======================= PRODUCTOS ======================= -->
  <section id="productos" class="max-w-7xl mx-auto px-4 pt-8">
    <div class="flex justify-center my-10 md:my-16">
      <div class="flex flex-col max-md:items-center">
        <h2 class="italic uppercase text-5xl md:text-7xl font-extrabold text-center">
          <span class="text-blue-700">Nuestros</span>
          <span class="text-transparent" style="-webkit-text-stroke: 1px rgb(29, 78, 216);"> productos</span>
        </h2>
        <div class="flex justify-end">
          <div class="w-56 h-3 bg-blue-700"></div>
        </div>
      </div>
    </div>

    <!-- GRID PRODUCTOS -->
    <div class="pt-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10 min-[1800px]:gap-28">

        <!-- Letreros luminosos -->
        <a href={`${import.meta.env.BASE_URL}servicios/letrero-luminoso`} aria-label="Letreros luminosos">
          <Card title1="Letreros" title2="luminosos" image="/assets/images/cards/5-min%201.png" variant="blue" />
        </a>

        <!-- Letreros 3D -->
        <a href={`${import.meta.env.BASE_URL}servicios/3d`} aria-label="Letreros 3D">
          <Card title1="3D" title2="Letreros" image="/assets/images/cards/10-min%201.png" variant="blue" />
        </a>

        <!-- Tarjetas de presentación -->
        <a href={`${import.meta.env.BASE_URL}tarjetas`} aria-label="Tarjetas de presentación">
          <Card title1="Tarjetas de" title2="presentación" image="/assets/images/tarjeta-presentacion.jpg" variant="blue" />
        </a>

        <!-- Volantes publicitarios -->
        <a href={`${import.meta.env.BASE_URL}volantes`} aria-label="Volantes publicitarios">
          <Card title1="Volantes" title2="Publicitarios" image="/assets/images/cards/2-min%201.png" variant="blue" />
        </a>

        <!-- Proformas / Nota de pedido -->
        <a href={`${import.meta.env.BASE_URL}formateria`} aria-label="Proformas y notas de pedido">
          <Card title1="Proformas" title2="nota de pedido" image="/assets/images/cards/4-min%201.png" variant="blue" />
        </a>

        <!-- Otros (sin enlace por ahora) -->
        <Card title1="Stikers"      title2="autoadhesivos"  image="/assets/images/cards/6-min%201.png"  variant="blue" />
        <Card title1="Cartas"       title2="personalizadas" image="/assets/images/cards/7-min%201.png"  variant="blue" />
        <Card title1="Almanaques"   title2="publicitarios"  image="/assets/images/cards/8-min%201.png"  variant="blue" />
        <Card title1="Merchandise"  title2="general"        image="/assets/images/cards/9-min%201.png"  variant="blue" />
        <Card title1="Diseño"       title2="publicitario"   image="/assets/images/cards/11-min%201.png" variant="blue" />
      </div>
    </div>
    <!-- /GRID PRODUCTOS -->
  </section>

  <!-- ======================= BANNER INSTALACIÓN EN ALTURA ======================= -->
  <section class="bg-blue-700 pb-12 pt-14" data-aos="fade-right" aria-label="Instalación en altura">
    <div class="max-w-7xl px-4 mx-auto w-full h-full">
      <div class="container h-full w-full flex justify-between items-end">
        <div class="text-white uppercase space-y-2">
          <div class="text-2xl lg:text-4xl">
            <span class="bg-white py-1 px-8 text-blue-700"
              style="clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);">¿Tienes algún</span>
          </div>
          <div class="text-4xl lg:text-6xl font-bold pt-2">
            proyecto <span class="text-3xl bg-white px-5 text-blue-700"
              style="clip-path: polygon(10% 0%, 100% 0%, 90% 100%, 0% 100%);">en</span>
          </div>
          <div class="text-6xl lg:text-9xl font-bold">mente?</div>
        </div>
        <div class="hidden md:block">
          <a href="#contacto" class="inline-block text-5xl border-8 border-white text-white rounded-2xl px-6 py-3 font-semibold uppercase">
            Contáctanos
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ======================= SERVICIOS ======================= -->
  <section id="servicios" class="max-w-7xl mx-auto px-4">
    <div class="flex justify-center my-10 md:my-16">
      <div class="mt-10 flex flex-col max-md:items-center">
        <h2 class="italic uppercase text-5xl md:text-8xl font-extrabold text-center">
          <span class="text-blue-700">Nuestros</span>
          <span class="text-transparent" style="-webkit-text-stroke: 1px rgb(29, 78, 216);"> servicios</span>
        </h2>
        <div class="flex justify-end">
          <div class="w-40 md:w-80 h-2 bg-blue-700"></div>
        </div>
      </div>
    </div>

    <!-- GRID SERVICIOS -->
    <div class="pt-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <a href={`${import.meta.env.BASE_URL}servicios/instalacion`} aria-label="Instalaciones">
          <Card title1="Instalaciones" title2="general" image="/assets/images/cards/12-min%201.png" variant="red" />
        </a>
        <Card title1="Soldadura" title2="" image="/assets/images/tarjeta.png" variant="red" />
        <Card top1="Marketing" top2="Digital" title1="Asistencia y" title2="asesoramiento" image="/assets/images/tarjeta.png" variant="red" />
      </div>
    </div>
    <!-- /GRID SERVICIOS -->
  </section>

  <!-- ======================= CONTACTO ======================= -->
  <section id="contacto" class="bg-gray-50 py-16">
    <!-- Inserta aquí tu bloque de contacto existente (formulario, teléfonos, dirección, mapa, etc.) -->
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-8">¿Listo para cotizar?</h2>
      <p class="text-center text-gray-700 mb-6">Atendemos Arequipa y provincias. Respuesta rápida por WhatsApp.</p>
      <div class="flex justify-center">
        <a
          href="https://wa.me/51946182531?text=Hola%20Victor%20Anuncios,%20quiero%20una%20cotizaci%C3%B3n"
          rel="noopener"
          class="inline-flex items-center gap-2 bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-xl transition"
        >
          Escríbenos por WhatsApp · 946 182 531
        </a>
      </div>
    </div>
  </section>

  <!-- ======================= CTA FLOTANTE WHATSAPP ======================= -->
  <a
    href="https://wa.me/51946182531?text=Hola%20Victor%20Anuncios,%20necesito%20informaci%C3%B3n"
    aria-label="Abrir WhatsApp Victor Anuncios"
    class="fixed z-40 right-4 bottom-4 md:right-6 md:bottom-6 inline-flex items-center justify-center w-14 h-14 rounded-full bg-green-600 text-white shadow-xl hover:scale-105 transition"
  >
    <!-- ícono simple -->
    <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor"><path d="M20.52 3.48A11.94 11.94 0 0 0 12.06 0C5.58 0 .26 5.32.26 11.89c0 2.09.55 4.13 1.6 5.94L0 24l6.33-1.81a12 12 0 0 0 5.73 1.46h.01c6.48 0 11.8-5.32 11.8-11.89 0-3.17-1.24-6.15-3.35-8.28ZM12.07 21.4h-.01a9.9 9.9 0 0 1-5.04-1.39l-.36-.21-3.75 1.07 1-3.64-.24-.37a9.9 9.9 0 0 1-1.52-5.12c0-5.45 4.43-9.88 9.88-9.88 2.64 0 5.13 1.03 7 2.9a9.89 9.89 0 0 1 2.9 7c0 5.45-4.43 9.88-9.88 9.88Zm5.74-7.37c-.31-.16-1.86-.92-2.15-1.03-.29-.1-.5-.16-.71.16-.21.31-.81 1.03-.99 1.24-.18.21-.36.23-.67.08-.31-.16-1.3-.48-2.48-1.53-.92-.79-1.54-1.76-1.72-2.07-.18-.31-.02-.48.13-.64.13-.13.31-.34.44-.5.15-.18.2-.31.31-.52.1-.21.05-.39-.03-.55-.08-.16-.71-1.7-.97-2.33-.26-.63-.52-.54-.71-.55h-.6c-.21 0-.55.08-.84.39-.29.31-1.1 1.07-1.1 2.61s1.13 3.03 1.29 3.24c.16.21 2.23 3.39 5.4 4.76.76.33 1.35.52 1.81.67.76.24 1.45.21 2 .13.61-.09 1.86-.76 2.12-1.5.26-.74.26-1.39.18-1.53-.08-.14-.29-.23-.6-.39Z"/></svg>
  </a>

  <!-- ======================= SPLIDE (CDN) ======================= -->
  <script is:inline src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
  <script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
      try {
        if (typeof window !== 'undefined' && window.Splide) {
          const el1 = document.querySelector('.splide');
          if (el1) new window.Splide(el1, { type: 'loop', autoplay: true, rewind: true }).mount();

          const el2 = document.querySelector('.splide2');
          if (el2) new window.Splide(el2, { type: 'loop', autoplay: true, rewind: true }).mount();
        }
      } catch (e) {
        console.warn('Splide init skipped:', e);
      }
    });
  </script>

</Layout>
