---
interface Props {
  image: string
  title1?: string
  title2?: string
  top1?: string
  top2?: string
  variant?: 'blue' | 'red'
}
const {
  image,
  title1 = '',
  title2 = '',
  top1 = '',
  top2 = '',
  variant = 'blue',
} = Astro.props

const bg =
  variant === 'red'
    ? 'bg-red-600'
    : 'bg-blue-700'
---
<div class={`rounded-[40px] ${bg} p-6 md:p-8 flex flex-col items-center`}>
  <div class="w-full flex justify-center">
    <img
      src={image}
      alt={`${title1} ${title2}`.trim() || 'Card'}
      class="h-56 w-auto object-contain"
      loading="lazy"
    />
  </div>

  <div class="mt-6 text-center text-white uppercase font-extrabold leading-tight">
    {top1 && <div class="text-xl md:text-2xl">{top1}</div>}
    {top2 && <div class="text-xl md:text-2xl">{top2}</div>}
    {title1 && <div class="text-4xl md:text-5xl">{title1}</div>}
    {title2 && (
      <div class="text-4xl md:text-5xl">
        {title2}
      </div>
    )}
  </div>
</div>
