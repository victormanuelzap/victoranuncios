<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Formatería | Victor Anuncios</title>
    <style>
      :root {
        --bg:#f8fafc; --text:#111827; --muted:#6b7280; --brand:#1d4ed8; --btn:#22c55e; --btn-h:#16a34a; --card:#fff;
      }
      html,body { margin:0; padding:0; background:var(--bg); color:var(--text); font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif; }
      .container { max-width: 1100px; margin: 0 auto; padding: 40px 16px; }
      h1 { font-weight: 800; text-align:center; letter-spacing:-0.02em; margin:0; color: var(--brand); }
      .lead { text-align:center; margin-top:10px; color:var(--muted); }
      .grid { margin-top: 32px; display:grid; gap: 24px; grid-template-columns: repeat(1, minmax(0,1fr)); }
      @media(min-width: 640px){ .grid { grid-template-columns: repeat(2, minmax(0,1fr)); } }
      @media(min-width: 1024px){ .grid { grid-template-columns: repeat(3, minmax(0,1fr)); } }
      .card { background: var(--card); border-radius: 16px; padding: 20px; box-shadow: 0 8px 24px rgba(0,0,0,.06); }
      .imgwrap { display:flex; justify-content:center; align-items:center; height: 224px; }
      .imgwrap img { max-width: 100%; max-height: 100%; object-fit: contain; image-rendering: auto; }
      .title1 { text-transform: uppercase; font-size:12px; color:#6b7280; margin: 12px 0 0 0; }
      .title2 { font-size: 20px; font-weight: 800; margin: 2px 0 0 0; }
      ul { margin: 12px 0 0 0; padding:0; list-style:none; }
      li { font-size: 14px; color:#374151; margin: 6px 0; }
      li span { font-weight:600; }
      .btn { margin-top: 14px; display:block; width:100%; text-align:center; text-decoration:none; padding: 10px 14px; border-radius:12px; background:var(--btn); color:white; font-weight:700; }
      .btn:hover { background: var(--btn-h); }
    </style>
  </head>
  <body>
    <main class="container">
      <h1>FORMATERÍA</h1>
      <p class="lead">Boletas, facturas, guías, notas de venta y más.</p>

      <section class="grid">
        {products.map((p) => (
          <article class="card">
            <div class="imgwrap">
              <img src={p.image} alt={p.title_2} width="640" height="480" loading="lazy" />
            </div>

            <h3 class="title1">{p.title}</h3>
            <h2 class="title2">{p.title_2}</h2>

            <ul>
              {p.features.map((f) => (
                <li><span>{f.name}:</span> {f.value}</li>
              ))}
            </ul>

            <a class="btn" href={p.whatsapp} target="_blank" rel="noopener noreferrer">Pedir por WhatsApp</a>
          </article>
        ))}
      </section>
    </main>
  </body>
</html>
