---
interface Props {
  image: string
  title1?: string
  title2?: string
  top1?: string
  top2?: string
  variant?: 'blue' | 'red'
  href?: string //a donde va el boton
}
const {
  image,
  title1 = '',
  title2 = '',
  top1 = '',
  top2 = '',
  variant = 'blue',
} = Astro.props

const BASE_URL = import.meta.env.BASE_URL

// Normaliza la ruta de imagen:
// - Si viene http(s) la deja tal cual
// - Si viene con o sin "/" delante, la ajusta con BASE_URL
const imgSrc = /^https?:\/\//i.test(image)
  ? image
  : `${BASE_URL}${image.replace(/^\/+/, '')}`   // <-- esta es la clave





const bg = variant === 'red' ? 'bg-red-600' : 'bg-blue-700'
---
<div class={`rounded-[40px] ${bg} p-6 md:p-8 flex flex-col items-center`}>
  <div class="w-full flex justify-center">
    <img
      src={imgSrc}
      alt={`${title1} ${title2}`.trim() || 'Card'}
      class="h-56 w-auto object-contain"
      loading="lazy"
    />
  </div>

  <!-- ⬇️ PÉGALO AQUÍ, debajo de la imagen -->
<div class="mt-4 w-full">
  <a
    href={`${BASE_URL}servicios/letrero-luminoso`}
    class="block w-full text-center text-white text-sm font-semibold bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg"
  >
    Ver más
  </a>
</div>