---
import Layout from '../../layouts/Layout.astro'

// Usar BASE_URL para que funcione en /victoranuncios/
const BASE_URL = import.meta.env.BASE_URL

// Archivos que están en: public/assets/services/instalacion/
const files = [
  'img-1.png',
  'img-2.png',
  'img-3.png',
  'img-4.png',
  // agrega más si tienes: 'img-5.png', ...
]

// Construimos las URLs finales
const images = files.map((n) => `${BASE_URL}assets/services/instalacion/${n}`)
---

<Layout title="Instalaciones" description="Instalaciones de letreros luminosos y 3D en Arequipa.">
  <section class="py-16">
    <h1 class="text-center text-3xl md:text-4xl font-extrabold mb-8">
      Instalaciones
    </h1>

    <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-6 px-4">
      {images.map((src, i) => (
        <figure class="rounded-2xl overflow-hidden shadow-lg bg-white">
          <img
            src={src}
            alt={`Instalación ${i + 1}`}
            loading="lazy"
            class="w-full h-48 md:h-56 object-cover"
            width="800"
            height="600"
          />
        </figure>
      ))}
    </div>
  </section>
</Layout>
