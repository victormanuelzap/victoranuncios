<Layout title='Tarjetas personales en Arequipa - Victor Anuncios'>
  <section class='relative'>
    <img
      src={`${BASE_URL}assets/images/tarjetas-personales.jpg`}
      alt='Tarjetas personales'
      class='h-80 w-full object-cover'
    />
    <div class='absolute top-0 left-0 w-full h-full bg-black/50 flex justify-center items-center'>
      <h1 class='text-white text-4xl md:text-6xl font-bold uppercase text-center'>
        TARJETAS PERSONALES
      </h1>
    </div>
  </section>

  <div class='max-w-7xl mx-auto px-4 md:px-8 lg:px-16 py-10'>
    <div class='grid gap-10 md:grid-cols-3'>
      {
        products.map((product) => (
          <div class='bg-white rounded-2xl shadow p-4'>
            <div class='relative'>
              <img
                src={product.image}
                alt={`${product.title} ${product.title_2}`}
                class='rounded-2xl transition-all duration-500 group-hover:scale-105 group-hover:rotate-2'
              />
              <div class='leading-6 text-2xl absolute bottom-5 w-full text-center'>
                {product.title && (
                  <h2 class='font-semibold uppercase'>{product.title}</h2>
                )}
                <h2 class='font-bold uppercase text-red-500'>{product.title_2}</h2>
              </div>
            </div>

            <div class='mt-4 overflow-x-auto'>
              <table class='w-full text-sm'>
                <tbody>
                  {product.features.map((feature) => (
                    <tr>
                      <td class='text-red-500 py-1 whitespace-nowrap'>{feature.name}:</td>
                      <td class='py-1 pl-2'>{feature.value}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>

            <div class='mt-5'>
              <a
                href={product.whatsapp}
                class='bg-green-600 text-white py-2 px-4 rounded-xl w-full flex gap-2 justify-center items-center'
              >
                <i class='bx bxl-whatsapp text-2xl'></i>
                Pedir por WhatsApp
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
