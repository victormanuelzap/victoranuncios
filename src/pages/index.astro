---
import Layout from '../layouts/Layout.astro'

// HERO: imports a prueba de fallos (dev y build)
import heroDesktop from '../assets/slider/banner-1.jpg?url'
import heroMobile  from '../assets/slider/hero-mobile.jpg?url'
---

<Layout>
  <!-- ======================= HERO responsive ======================= -->
  <section class="w-full overflow-hidden">
    <picture>
      <!-- Móvil -->
      <source srcset={heroMobile} media="(max-width: 768px)" />
      <!-- Desktop (default) -->
      <img
        src={heroDesktop}
        alt="Letreros 3D Victor Anuncios"
        class="block w-full h-[46vh] md:h-[70vh] object-cover object-left md:object-center"
        loading="eager"
        fetchpriority="high"
      />
    </picture>
  </section>

  <!-- ======================= CINTA NEGRA DE PROMESA ======================= -->
  <section aria-label="Promesa" class="bg-black text-white">
    <div class="max-w-7xl mx-auto px-4 py-3 text-center font-semibold tracking-wide">
      Entrega 24 a 72h · Garantía 12 meses · Visita Técnica en Arequipa
    </div>
  </section>

  <!-- ======================= NUESTROS PRODUCTOS ======================= -->
  <section id="productos" class="max-w-7xl mx-auto px-4 pt-8">
    <div class="flex justify-start">
      <h2 class="text-sm font-extrabold tracking-widest text-blue-700">NUESTROS PRODUCTOS</h2>
    </div>

    <!-- GRID PRODUCTOS -->
    <div class="mt-5 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

      <!-- Letrero Luminoso -->
      <a href={`${import.meta.env.BASE_URL}servicios/letrero-luminoso`} class="group">
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-100 hover:shadow-md transition overflow-hidden">
          <div class="p-4">
            <div class="aspect-[4/3] w-full overflow-hidden rounded-xl bg-gray-50">
              <img
                src={`${import.meta.env.BASE_URL}assets/images/cards/5-min%201.png`}
                alt="Letrero luminoso"
                class="h-full w-full object-contain group-hover:scale-[1.02] transition"
                loading="lazy"
              />
            </div>
            <div class="mt-3">
              <h3 class="text-[13px] font-semibold text-gray-800 leading-tight">Letrero Luminoso</h3>
              <p class="text-[11px] text-gray-500 -mt-0.5">Diseño, fabricación e instalación</p>
            </div>
            <div class="mt-3">
              <span class="inline-block text-white text-[12px] font-semibold bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg">Ver más</span>
            </div>
          </div>
        </article>
      </a>

      <!-- Letrero 3D -->
      <a href={`${import.meta.env.BASE_URL}servicios/3d`} class="group">
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-100 hover:shadow-md transition overflow-hidden">
          <div class="p-4">
            <div class="aspect-[4/3] w-full overflow-hidden rounded-xl bg-gray-50">
              <img
