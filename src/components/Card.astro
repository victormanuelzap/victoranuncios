---
interface Props { image: string; title1?: string; title2?: string; top1?: string; top2?: string; variant?: 'blue'|'red'; href?: string }
const { image, title1='', title2='', top1='', top2='', variant='blue', href='#' } = Astro.props
const BASE_URL = import.meta.env.BASE_URL;
const imgSrc = /^https?:\/\//i.test(image) ? image : `${BASE_URL}${image.replace(/^\/+/, '')}`;
const bg = variant === 'red' ? 'bg-red-600' : 'bg-blue-700';
---
<div class={`rounded-[40px] ${bg} p-6 md:p-8 flex flex-col items-center`}>
  <div class="w-full flex justify-center">
    <img src={imgSrc} alt={`${title1} ${title2}`.trim() || 'Card'} class="h-56 w-auto object-contain" loading="lazy" />
  </div>
  <div class="mt-4 w-full text-center">
    <a href={href} class="block w-full text-white text-sm font-semibold bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg">Ver m√°s</a>
  </div>
</div>
