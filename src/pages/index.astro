---
import Layout from '../layouts/Layout.astro'
const base = import.meta.env.BASE_URL; // se ajusta solo en local y en GitHub Pages
---

<Layout>
  <section class="w-full overflow-hidden">
    <picture>
      <!-- Imagen para móvil -->
      <source srcset={`${base}images/slider/hero-mobile.jpg`} media="(max-width: 768px)" />
      
      <!-- Imagen para escritorio -->
      <img
        src={`${base}images/slider/banner-1.jpg`}
        alt="Letreros 3D Victor Anuncios"
        class="block w-full h-[46vh] md:h-[70vh] object-cover object-left md:object-center"
        loading="eager"
        fetchpriority="high"
      />
    </picture>
  </section>

  <!-- …el resto de tu página… -->
  <!-- Cinta promesa (igual) -->

  <section id="productos" class="max-w-7xl mx-auto px-4 pt-8">
    <div class="flex justify-start">
      <h2 class="text-sm font-extrabold tracking-widest text-blue-700">NUESTROS PRODUCTOS</h2>
    </div>

    <div class="mt-5 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <a href={`/servicios/letrero-luminoso`} class="group">
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-100 hover:shadow-md transition overflow-hidden">
          <div class="p-4">
            <div class="aspect-[4/3] w-full overflow-hidden rounded-xl bg-gray-50">
              <img src={cardLuminoso} alt="Letrero luminoso" class="h-full w-full object-contain group-hover:scale-[1.02] transition" loading="lazy" />
            </div>
            <div class="mt-3">
              <h3 class="text-[13px] font-semibold text-gray-800 leading-tight">Letrero Luminoso</h3>
              <p class="text-[11px] text-gray-500 -mt-0.5">Diseño, fabricación e instalación</p>
            </div>
            <div class="mt-3">
              <span class="inline-block text-white text-[12px] font-semibold bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg">Ver más</span>
            </div>
          </div>
        </article>
      </a>

      <a href={`/servicios/3d`} class="group">
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-100 hover:shadow-md transition overflow-hidden">
          <div class="p-4">
            <div class="aspect-[4/3] w-full overflow-hidden rounded-xl bg-gray-50">
              <img src={card3D} alt="Letrero 3D" class="h-full w-full object-contain group-hover:scale-[1.02] transition" loading="lazy" />
            </div>
            <div class="mt-3">
              <h3 class="text-[13px] font-semibold text-gray-800 leading-tight">Letrero 3D</h3>
              <p class="text-[11px] text-gray-500 -mt-0.5">Diseño, fabricación e instalación</p>
            </div>
            <div class="mt-3">
              <span class="inline-block text-white text-[12px] font-semibold bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg">Ver más</span>
            </div>
          </div>
        </article>
      </a>

      <a href={`/tarjetas`} class="group">
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-100 hover:shadow-md transition overflow-hidden">
          <div class="p-4">
            <div class="aspect-[4/3] w-full overflow-hidden rounded-xl bg-gray-50">
              <img src={tarjeta} alt="Tarjetas personales" class="h-full w-full object-contain group-hover:scale-[1.02] transition" loading="lazy" />
            </div>
            <div class="mt-3">
              <h3 class="text-[13px] font-semibold text-gray-800 leading-tight">Tarjetas Personales</h3>
              <p class="text-[11px] text-gray-500 -mt-0.5">Diseño e impresión</p>
            </div>
            <div class="mt-3">
              <span class="inline-block text-white text-[12px] font-semibold bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg">Ver más</span>
            </div>
          </div>
        </article>
      </a>

      <a href={`/volantes`} class="group">
        <article class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-100 hover:shadow-md transition overflow-hidden">
          <div class="p-4">
            <div class="aspect-[4/3] w-full overflow-hidden rounded-xl bg-gray-50">
              <img src={cardVolantes} alt="Volantes publicitarios" class="h-full w-full object-contain group-hover:scale-[1.02] transition" loading="lazy" />
            </div>
            <div class="mt-3">
              <h3 class="text-[13px] font-semibold text-gray-800 leading-tight">Volantes Publicitarios</h3>
              <p class="text-[11px] text-gray-500 -mt-0.5">Diseño e impresión</p>
            </div>
            <div class="mt-3">
              <span class="inline-block text-white text-[12px] font-semibold bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg">Ver más</span>
            </div>
          </div>
        </article>
      </a>
    </div>
  </section>

  <!-- Banner instalación en altura -->
  <section class="mt-12">
    <div class="max-w-7xl mx-auto px-4">
      <div class="bg-red-700 text-white rounded-2xl overflow-hidden grid md:grid-cols-2">
        <div class="p-8 md:p-10">
          <p class="text-sm font-extrabold tracking-widest">INSTALACIÓN DE</p>
          <h3 class="text-4xl md:text-5xl font-extrabold leading-tight">LETREROS<br/>EN ALTURA</h3>
          <ul class="mt-6 space-y-2 text-white/90">
            <li>✓ Montaje seguro</li>
            <li>✓ Línea de vida</li>
          </ul>
          <a href="#contacto" class="inline-block mt-6 bg-white text-red-700 font-bold px-4 py-2 rounded-lg">VER MÁS</a>
        </div>
        <div class="relative">
          <img src={altura} alt="Instalación en altura" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </section>
</Layout>
