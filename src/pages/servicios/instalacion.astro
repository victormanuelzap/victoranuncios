---
import Layout from '../../layouts/Layout.astro'

// Importar imágenes desde src/assets (Astro genera la URL correcta)
import img1 from '../../assets/services/instalacion/img-1.png'
import img2 from '../../assets/services/instalacion/img-2.png'
import img3 from '../../assets/services/instalacion/img-3.png'
import img4 from '../../assets/services/instalacion/img-4.png'

const images = [img1, img2, img3, img4]
---

<Layout title="Instalaciones" description="Instalaciones de letreros luminosos y 3D en Arequipa.">
  <section class="py-16">
    <h1 class="text-center text-3xl md:text-4xl font-extrabold mb-8">
      Instalaciones
    </h1>

    <div class="max-w-6xl mx-auto grid grid-cols-2 md:grid-cols-4 gap-6 px-4">
      {images.map((src, i) => (
        <figure class="rounded-2xl overflow-hidden shadow-lg bg-white">
          <img
            src={src}
            alt={`Instalación ${i + 1}`}
            loading="lazy"
            class="w-full h-48 md:h-56 object-cover"
            width="800"
            height="600"
          />
        </figure>
      ))}
    </div>
  </section>
</Layout>
