---
const BASE_URL = import.meta.env.BASE_URL;

const cards = [
  {
    titleTop: "LETREROS",
    titleBottom: "LUMINOSOS",
    href: `${BASE_URL}servicios/letrero-luminoso`,
    img: `${BASE_URL}assets/services/letrero-luminoso.png`,
    alt: "Letreros luminosos"
  },
  {
    titleTop: "3D",
    titleBottom: "LETREROS",
    href: `${BASE_URL}servicios/3d`,
    img: `${BASE_URL}assets/services/letrero-3d.png`,
    alt: "Letreros 3D"
  },
  {
    titleTop: "TARJETAS DE",
    titleBottom: "PRESENTACIÓN",
    href: `${BASE_URL}servicios/tarjetas`,  // ajusta si tu ruta es otra
    img: `${BASE_URL}assets/services/tarjetas-presentacion.png`,
    alt: "Tarjetas de presentación"
  }
];
---

<section class="mx-auto max-w-7xl px-4 md:px-6 lg:px-8 py-8">
  <div class="grid gap-8 md:grid-cols-3">
    {cards.map((c) => (
      <a href={c.href} class="block rounded-3xl bg-[#1548D9] p-6 transition-transform hover:scale-[1.01]">
        <div class="aspect-[4/3] w-full overflow-hidden rounded-2xl bg-white/5 flex items-center justify-center">
          <img src={c.img} alt={c.alt} class="max-h-full max-w-full object-contain" loading="lazy" />
        </div>
        <div class="mt-6 text-center leading-none">
          <p class="text-white font-extrabold text-4xl md:text-5xl tracking-tight">{c.titleTop}</p>
          <p class="text-white font-extrabold text-4xl md:text-5xl tracking-tight">{c.titleBottom}</p>
        </div>
      </a>
    ))}
  </div>
</section>
