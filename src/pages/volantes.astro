---

<Layout title='Volantes publicitarios (Arequipa) - Worlkontrol System'>
  <section class='relative'>
    <img
      src={`${BASE_URL}assets/images/volantes-publicitarios.jpg`}
      alt='Volantes publicitarios en Arequipa'
      class='h-80 w-full object-cover'
    />
    <div class='absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 flex justify-center items-center'>
      <h1 class='text-white text-4xl md:text-6xl font-bold uppercase text-center'>
        VOLANTES PUBLICITARIOS
      </h1>
    </div>
  </section>

  <div class='max-w-7xl mx-auto'>
    <div class='grid gap-10 md:grid-cols-3'>
      {products.map((product) => (
        <div class='group'>
          <div class='relative'>
            <img
              src={product.image}
              alt={`${product.title} - ${product.title_2}`}
              class='rounded-2xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-500'
              loading='lazy'
            />
            <div class='leading-6 text-2xl absolute bottom-5 w-full text-center'>
              {product.title && (
                <h2 class='font-semibold uppercase'>{product.title}</h2>
              )}
              <h2 class='font-bold uppercase text-red-500'>
                {product.title_2}
              </h2>
            </div>
          </div>

          <div class='mt-3'>
            <table class='text-sm'>
              <tbody>
                {product.features.map((feature) => (
                  <tr>
                    <td class='text-red-500 pr-2 whitespace-nowrap'>
                      {feature.name}:&nbsp;
                    </td>
                    <td>{feature.value}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>

          <div class='my-5'>
            <a
              href={product.whatsapp}
              class='bg-green-600 text-white py-2 px-4 rounded-xl w-full flex gap-2 justify-center items-center'
            >
              <i class='bx bxl-whatsapp text-2xl' />
              Pedir por WhatsApp
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>
