---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Hero from '../components/hero.astro'
// import ServicesGrid from '../components/ServicesGrid.astro'  <-- QUITADO
---

<Layout >

  <!-- Hero principal -->
  <Hero
    image="/assets/banners/banner-1.jpg"
    title="Gigantografías en Arequipa"
    subtitle="Letreros 3d, Impresión HD en lona, vinil, microperforado y PVC. Instalación profesional y rápida."
    primaryHref="#contacto"
    primaryText="Cotiza ahora"
    secondaryHref="#productos"
    secondaryText="Ver productos"
  />

  <!-- ======================= CONTACTO ======================= -->
  <section id="contacto" class="bg-gray-50 py-16">
    <!-- aquí todo el bloque de contacto que te pasé antes -->
  </section>
  <!-- ===================== /CONTACTO ===================== -->

  <!-- Aquí sigues con tus otras secciones -->
  <div class='bg-blue-700 pb-12 pt-14 flex justify-center' data-aos='fade-right'>
    <!-- contenido de tu sección azul -->
  </div>

  <div
    class='bg-blue-700 pb-12 pt-14 flex justify-center'
    data-aos='fade-right'
  >
    <div class='max-w-7xl px-4 w-full h-full'>
      <div class='container h-full w-full flex justify-between items-end'>
        <div class='text-white uppercase space-y-2'>
          <div class='text-2xl lg:text-4xl'>
            <span
              class='bg-white py-1 px-8 text-blue-700'
              style='clip-path: polygon(5% 0%, 100% 0%, 95% 100%, 0% 100%);'
            >¿Tienes algún</span>
          </div>
          <div class='text-4xl lg:text-6xl font-bold pt-2'>
            proyecto <span
              class='text-3xl bg-white px-5 text-blue-700'
              style='clip-path: polygon(10% 0%, 100% 0%, 90% 100%, 0% 100%);'
            >en</span>
          </div>
          <div class='text-6xl lg:text-9xl font-bold'>mente?</div>
        </div>
        <div class='h-full items-end hidden md:block'>
          <button
            class='text-5xl border-8 border-white text-white rounded-2xl px-4 py-2 font-semibold uppercase'
          >
            Contactanos
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class='max-w-7xl mx-auto px-4 pt-8'>
    <div class='flex justify-center my-10 md:my-16' id='productos'>
      <div class='flex flex-col max-md:items-center'>
        <h2 class='italic uppercase text-5xl md:text-7xl font-extrabold text-center'>
          <span class='text-blue-700'>Nuestros</span>
          <span style='-webkit-text-stroke: 1px rgb(29, 78, 216);' class='text-transparent'>productos</span>
        </h2>
        <div class='flex justify-end'>
          <div class='w-56 h-3 bg-blue-700'></div>
        </div>
      </div>
    </div>

    <!-- ===== GRID PRODUCTOS ===== -->
    <div class='pt-6'>
      <div class='grid grid-cols-1 md:grid-cols-3 gap-10 min-[1800px]:gap-28'>
        <!-- Letreros luminosos -->
        <a href={`${import.meta.env.BASE_URL}servicios/letrero-luminoso`}>
          <Card
            title1='Letreros'
            title2='luminosos'
            image='/assets/images/cards/5-min%201.png'
            variant='blue'
          />
        </a>

        <!-- Letreros 3D -->
        <a href={`${import.meta.env.BASE_URL}servicios/3d`}>
          <Card
            title1='3D'
            title2='Letreros'
            image='/assets/images/cards/10-min%201.png'
            variant='blue'
          />
        </a>

        <!-- Tarjetas de presentación -->
        <a href={`${import.meta.env.BASE_URL}tarjetas`}>
          <Card
            title1='Tarjetas de'
            title2='presentación'
            image='/assets/images/tarjeta-presentacion.jpg'
            variant='blue'
          />
        </a>

        <!-- Volantes publicitarios -->
        <a href={`${import.meta.env.BASE_URL}volantes`}>
          <Card
            title1='Volantes'
            title2='Publicitarios'
            image='/assets/images/cards/2-min%201.png'
            variant='blue'
          />
        </a>

        <!-- Proformas / Nota de pedido (tu página es formateria.astro) -->
        <a href={`${import.meta.env.BASE_URL}formateria`}>
          <Card
            title1='Proformas'
            title2='nota de pedido'
            image='/assets/images/cards/4-min%201.png'
            variant='blue'
          />
        </a>

        <!-- Los demás por ahora sin enlace -->
        <Card title1='Stikers'      title2='autoadhesivos'  image='/assets/images/cards/6-min%201.png' variant='blue' />
        <Card title1='Cartas'       title2='personalizadas' image='/assets/images/cards/7-min%201.png' variant='blue' />
        <Card title1='Almanaques'   title2='publicitarios'  image='/assets/images/cards/8-min%201.png' variant='blue' />
        <Card title1='Merchandise'  title2='general'        image='/assets/images/cards/9-min%201.png' variant='blue' />
        <Card title1='Diseño'       title2='publicitario'   image='/assets/images/cards/11-min%201.png' variant='blue' />
      </div>
    </div>
    <!-- ===== /GRID PRODUCTOS ===== -->

    <!-- ===== Título SERVICIOS ===== -->
    <div class='flex justify-center my-10 md:my-16' id='servicios'>
      <div class='mt-10 flex flex-col max-md:items-center'>
        <h2 class='italic uppercase text-5xl md:text-8xl font-extrabold text-center'>
          <span class='text-blue-700'>Nuestros</span>
          <span style='-webkit-text-stroke: 1px rgb(29, 78, 216);' class='text-transparent'>servicios</span>
        </h2>
        <div class='flex justify-end'>
          <div class='w-40 md:w-80 h-2 bg-blue-700'></div>
        </div>
      </div>
    </div>

    <!-- ===== GRID SERVICIOS ===== -->
    <div class='pt-6'>
      <div class='grid grid-cols-1 md:grid-cols-3 gap-10'>
        <a href={`${import.meta.env.BASE_URL}servicios/instalacion`}>
          <Card
            title1='Instalaciones'
            title2='general'
            image='/assets/images/cards/12-min%201.png'
            variant='red'
          />
        </a>
        <Card
          title1='Soldadura'
          title2=''
          image='/assets/images/tarjeta.png'
          variant='red'
        />
        <Card
          top1='Marketing'
          top2='Digital'
          title1='Asistencia y'
          title2='asesoramiento'
          image='/assets/images/tarjeta.png'
          variant='red'
        />
      </div>
    </div>
    <!-- ===== /GRID SERVICIOS ===== -->
  </div>
<!-- SPLIDE JS (evita que Astro/TS lo procese) -->
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"
></script>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    try {
      if (typeof window !== 'undefined' && window.Splide) {
        var el1 = document.querySelector('.splide');
        if (el1) {
          new window.Splide(el1, { type: 'loop', autoplay: true, rewind: true }).mount();
        }

        var el2 = document.querySelector('.splide2');
        if (el2) {
          new window.Splide(el2, { type: 'loop', autoplay: true, rewind: true }).mount();
        }
      }
    } catch (e) {
      console.warn('Splide init skipped:', e);
    }
  });
</script>


</Layout>
